<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ihesen.think">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.ihesen.think.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.ihesen.think.module.splash.activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ihesen.think.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.ihesen.think.module.splash.activities.HomeActivity" />
        <activity
            android:name="com.ihesen.think.module.main.activities.MainTabActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.ihesen.imageloader.SimpleGlideModule"
            android:value="GlideModule" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
